{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext",
            "ES2020.Promise"
        ],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "react",
        "noImplicitAny": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "downlevelIteration": true,
        "baseUrl": ".",
        "paths": {
            "#api/*": [
                "src/api/*"
            ],
            "#ApplicationState": [
                "src/components/App/redux/ApplicationState"
            ],
            "#components/*": [
                "src/components/*"
            ],
            "#hooks/*": [
                "src/hooks/*"
            ],
            "#sagas": [
                "src/sagas"
            ],
            "#sagas/*": [
                "src/sagas/*"
            ],
            "#domain/*": [
                "src/domain/*"
            ]
        }
    },
    "include": [
        "./src",
        "./build",
        "./webpack.config.ts"
    ]
}